{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Producer-Consumer",
            "type": "shell",
            "command": "gcc -g prod-com.c -o prod-com.out -lpthread",
            "group": "build"
        },
        {
            "label": "Build Syscalls",
            "type": "shell",
            "command": "gcc -g syscalls.c -o syscalls.out",
            "group": "build"
        },
        {
            "label": "Build Trial",
            "type": "shell",
            "command": "gcc -g extras/trial.c -o trial",
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}